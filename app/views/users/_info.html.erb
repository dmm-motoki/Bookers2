<div class="row mx-1">
  <h2 class="mt-3">User info</h2>
  <table class="table table-md">
    <tr>
      <th>
        <%= image_tag user.get_profile_image(100,100) %>
      </th>
    </tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </table>
</div>
<div class="row mt-3">
  <a href="/users/<%= user.id %>/edit" class="btn btn-outline-secondary btn-block"><i class="fas fa-user-cog"></i></a>
</div>

<div class="row mx-1">
  <h2 class="mt-3">New book</h2>
  <%= form_with model: book do |f| %>
    <p>Title</p>
    <%= f.text_field :title, class: "w-100 mb-3" %>
    <p>Opinion</p>
    <%= f.text_field :body, class: "w-100 mb-3 p-2" %>
    <%= f.submit "Create Book", class: "btn btn-success p-1" %>
  <% end %>
</div>