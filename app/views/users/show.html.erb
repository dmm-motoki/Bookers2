<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'info', book: @book, user: @user %>
    </div>
    <div class="col-8 offset-1">
      <h2 class="mt-3">Books</h2>

      <table class="table table-md table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |books| %>
            <tr>
              <td><a href="/users/<%= books.user.id %>"><%= image_tag books.user.get_profile_image(100,100) %></a></td>
              <td><a href="/books/<%= books.id %>"><%= books.title %></a></td>
              <td><%= books.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>