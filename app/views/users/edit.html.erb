<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 mx-auto pt-3">
        <h1>User info</h1>
        <%= form_with model: @user do |f| %>
          <div>
            <label for="inputName">Name</label>
            <div>
              <%= f.text_field :name, class: "w-100", autofocus: true, id:"inputName", placeholder:"名前" %>
            <div>
          </div>
          <div>
            <label class="mt-3" for="inputImage">Image</label>
            <div>
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            </div>
          </div>
          <div>
            <label class="mt-3" for="inputIntroduction">Introduction</label>
            <div>
              <%= f.text_area :introduction, class: "w-100 mb-3" %>
            </div>
          </div>
          <div>
            <%= f.submit "Update User" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>