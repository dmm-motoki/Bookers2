<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'info', book: @book, user: @user %>
    </div>
    <div class="col-8">
      <h1>Users</h1>
      <table class="w-100">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |users| %>
            <tr>
              <td></td>
              <td><%= users.name %></td>
              <td><a href="/users/<%= users.id %>">Show</a></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>