<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'info', book: @book, user: @user %>
    </div>
    <div class="col-8 offset-1">
      <h2 class="mt-3">Users</h2>
      <table class="table table-md">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |users| %>
            <tr>
              <td><%= image_tag users.get_profile_image(80,80) %></td>
              <td><%= users.name %></td>
              <td><a href="/users/<%= users.id %>">Show</a></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>