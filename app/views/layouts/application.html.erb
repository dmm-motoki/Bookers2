<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <a class="nav-link text-light" href="/"><i class="fa fa-home"></i>Home</a>
              </li>
              <% if user_signed_in? %>
                <li class="nav-item">
                  <a class="nav-link text-light" href="/users"><i class="fa fa-users"></i>Users</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-light" href="/books"><i class="fa fa-book-open"></i>Books</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-light" data-method="delete" href="/users/sign_out"><i class="fa fa-right-from-bracket"></i>Log out</a>
                </li>
              <% else %>
                <li class="nav-item">
                  <a class="nav-link text-light" href="/home/about"><i class="fa fa-link"></i>About</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-light" href="/users/sign_up"><i class="fa fa-user-plus"></i>Sign up</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-light" href="/users/sign_in"><i class="fa fa-right-to-bracket"></i>Log in</a>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
