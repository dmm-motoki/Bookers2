<div class="container">
  <% if @book.errors.any? %>
    <h3 class="mt-3"><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row">
    <div class="col-3">
      <%= render '/users/info', book: @book, user: current_user %>
    </div>

    <div class="col-8 offset-1">
      <h2 class="mt-3">Books</h2>

      <table class="table table-md table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |books| %>
            <tr>
              <td>
                <a href="/users/<%= books.user.id %>"><%= image_tag books.user.get_profile_image(80,80) %></a>
              </td>
              <td><a href="/books/<%= books.id %>"><%= books.title %></a></td>
              <td><%= books.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>