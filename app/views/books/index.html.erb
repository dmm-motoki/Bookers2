<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render '/users/info', book: @book, user: @user %>
    </div>

    <div class="col-8">
      <h1>Books</h1>

      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |books| %>
            <tr>
              <td>
                <%= image_tag books.user.get_profile_image(100,100) %>
              </td>
              <td><a href="/books/<%= books.id %>"><%= books.title %></a></td>
              <td><%= books.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>