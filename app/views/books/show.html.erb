
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render '/users/info', book: @books, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Book detail</h2>
      <table class="table table-md">
        <tbody>
          <tr>
            <th>
              <div>
                <%= image_tag @books.user.get_profile_image(100,100) %>
              </div>
              <a href="/users/<%= @books.user_id %>"><%= @books.user.name %><a>
            </th>
            <th><a href="/books/<%= @books.id %>"><%= @books.title %></a></th>
            <th><%= @books.body %></th>
            <% if @books.user_id == current_user.id %>
              <th><%= link_to 'Edit', edit_book_path(@books.id), class: "btn btn-success" %></th>
              <th><%= link_to 'Destroy', book_path(@books.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></th>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

