<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-8 col-lg-5 col-xl-4 m-auto">
      <h1 class="mt-3">Editing Book</h1>
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @book do |f| %>
        <p>Title</p>
        <%= f.text_field :title, class: "w-100 mb-3" %>
        <p>Opinion</p>
        <%= f.text_area :body, class: "w-100 mb-3" %>
        <div>
          <%= f.submit 'Update Book', class: "btn btn-success mb-3" %>
        </div>
      <% end %>
      <p><a href="/books/<%= @book.id %>">Show</a> | <a href="/books">Back</a></p>
    </div>
  </div>
</div>
